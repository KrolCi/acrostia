@import url(normalize.min.css);
@import url(http://fonts.googleapis.com/css?family=Playball);
@import url(rslides.css);
@import url(iconos.css);

red_services = #b54b51
gray-about = #665464

*
	box-sizing border-box

//colors background
.green-portfolio
	background-color #83a457
.red-services
	background-color red_services
.gray-about
	background-color gray-about
.blue-contact
	background-color #75b4aa

.centrar-texto
	text-align center
.here-index
	background-color #74c7d5
.here-services
	background-color #df5c64
.here-about
	background-color #91778e
.here-portfolio
	background-color #a1ca6c
.here-contact
	background-color #82c8bd
	
	

body
	font-size 100%
	background-color #b54b51
	background-repeat no-repeat
	
.Header
	color white
	width 78.5%
	position relative
	left 11.5%
	margin-bottom 1em
	
  .Menu
	display inline-block
	margin 0
	padding 0
	position absolute
	top -1em
	right 0
		
     .Menu-list
	
	   .Menu-listItem
			display inline-block
			margin-left 1em
			border-radius 0 0 .3em .3em
				
		  .Menu-link
				color white
				display inline-block
				padding 2em 1em 1em 1em
				text-decoration none
					
		  .Menu-listItem:hover
				background-color #74c7d5
.Header-logo
	display inline-block
	font-family Playball, serif
	font-size 2em
	margin-top 0
	top .51em
	position relative
	
.People
	text-align center
	width 80%
	margin 0 auto
	&-meet
		background-color #a1ca6c
		border-radius 5px
		color white
		display block
		font-size 1.2em
		font-weight bold
		margin 0 auto 4em auto
		padding .5em 1em
		position relative
		text-transform uppercase
		width 12em
		
		&Triangle
			height 1em
			left 46.5%
			bottom -1em
			position absolute
			width 1em
			
			&:before
				content ""
				border-top 0.8em solid #a1ca6c
				border-bottom 1em solid transparent
				border-left 1em solid transparent
				border-right 1em solid transparent
				position absolute
				left -0.6em
	&-person
		background-color #5c4b5a
		display inline-block
		margin 0 .6em 1em .6em
		width 15em
		text-align center
		
		&ImgContainer
			display inline-block
			margin-top 2em
			width 8em
			
			&Image
				border 3px solid #a1859e
				border-radius 50%
				font-size 8em
				z-index: -1
		&Name
			color #a1859e
			margin-bottom .2em
			
		&Position
			color #8aa066
			margin 0 0 1.5em 0
		&Social
			margin-bottom 2em
			span
				color #a1859e
				display inline-block
				margin 0 .25em
				
			
				

.Section
	box-shadow 0 0 20px black
	margin 0 auto
	width 70%
	
.Services
	text-align center
	color white
	position relative
	left 10%
	right 10%
	width 80%
	
	&-description
		margin 0 0 5em 0
		padding 0
		
	&-h1
		font-size 3em
		font-weight lighter
		
	&-subtitle
		text-transform uppercase
	
	.Skill
		width 100%
		
		&-skills
			background-color #c9575e
			display inline-block
			padding 2em 1em
			width 15em
			margin 0 .6em 4em .6em
			
			p
				margin 0
				padding 0
			
			.icon
				font-size 6em
			
			&Researching
				font-weight 100
				text-transform uppercase
				margin 1.5em 0 1.5em 0
			&Design
				font-weight 100
				text-transform uppercase
				margin 1.5em 0 1.5em 0
			&Development
				font-weight 100
				text-transform uppercase
				margin 1.5em 0 1.5em 0
			&Launch
				font-weight 100
				text-transform uppercase
				margin 1.5em 0 1.5em 0
				
.WhoWeAre
	color white
	margin 0 auto 3em auto
	text-align center
	width 80%
	&-h1
		font-size 3em
		font-weight 100
		text-transform uppercase

		
//Module portfolio
.Work
	margin 3rem auto
	text-align center
	width 80%
	
.Work__title
	color white
	font-size 3em
	font-weight lighter
	
.Work__description
	color white
	
.Work__menu
	border-bottom 1px solid white
	border-top 1px solid white
	margin-top 3rem
	position relative
	padding 1em 0
	text-align right

.Work__menu > *
	display inline-block
.Work__menu:nth-last-child(1)
	padding-right 1em
.Work__menu-portfolio
	color white
	font-weight bold
	position absolute
	left 1em
	top 6px
.Work__menu-tab
	border-radius 2px
	color white
	margin-left 1em
	padding 5px
	text-decoration none
	&:hover
		background-color #f5c149
		

.Picture
	display flex
	justify-content space-around
	flex-flow: row wrap;
	margin 0 auto
	width 80%
	
.Picture__item-img-container-img
	width 200px
	
.Picture__item-description
	background-color white
	color #838383
	text-align center
	margin-top -4px
	padding .5rem
	position relative
	&::before
		content ""
		border-top 1em solid transparent
		border-right 1em solid transparent
		border-bottom 1em solid white
		border-left 1em solid transparent
		position absolute
		top -2em
		left 84px
	
	
